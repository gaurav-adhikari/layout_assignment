<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <style name="appbartheme" parent="@android:style/Widget.TextView">

        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:textColor">@color/appbar_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="buttontheme1" parent="android:Widget.Button">

        <item name="android:background">@color/white</item>

        <item name="android:drawablePadding">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAlignment">textStart</item>

    </style>


    <style name="btn_invite" parent="android:Widget.Button">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:padding">17dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>



    <style name="tv_flames" parent="@android:style/Widget.TextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
